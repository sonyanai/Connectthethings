<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFF00"
        android:padding="10dp"
        android:id="@+id/iconImageView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iconImageView"
        android:layout_toRightOf="@+id/iconImageView"
        android:id="@+id/FavAreaTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconImageView"
        android:layout_toRightOf="@+id/iconImageView"
        android:padding="15dp"
        android:text="hyouka"
        android:id="@+id/FollowTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconImageView"
        android:layout_toRightOf="@+id/FollowTextView"
        android:id="@+id/FollowerTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FollowTextView"
        android:id="@+id/EvaluationTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/EvaluationTextView"
        android:id="@+id/EvaluationPeopleTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FollowTextView"
        android:id="@+id/commentTextView"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/commentTextView"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PersonalList"
        android:layout_below="@+id/commentTextView"
        android:layout_marginTop="5dp">

    </ListView>

</RelativeLayout>
